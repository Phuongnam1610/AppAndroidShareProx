<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/red</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="tvquotes" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/_15sdp</item>

        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="fontFamily">@font/gothicregular</item>
    </style>

    <style name="tvspinner" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">@font/dfvn</item>
    </style>

    <style name="tvmain" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/sfu1</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="tvmain2" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/sfu1</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/_20sdp</item>
    </style>

    <style name="TitleLarge" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_25sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/blenda</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="TitleMedium" parent="TitleLarge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/blenda</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="edtstyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/blenda</item>
        <item name="android:background">@drawable/bgedt</item>
        <item name="android:textColorHint">@color/red</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="btnPrimaryMedium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/main</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:fontFamily">@font/htl</item>
        <item name="android:backgroundTint">@color/red</item>
    </style>

    <style name="btnSecondaryMedium">
        <item name="android:layout_width">@dimen/_70sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/main</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:fontFamily">@font/htl</item>
        <item name="android:backgroundTint">@color/red</item>
    </style>

    <style name="textPrimaryMedium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>
    <style name="textPrimarySmall" parent="textPrimaryMedium">

        <item name="android:textSize">@dimen/_8sdp</item>
    </style>

</resources>